{
  "name": "ffc-ahwr-sfd-messaging-proxy",
  "version": "0.1.26",
  "description": "Proxies messages through to Single Frontdoor (SFD) service",
  "homepage": "https://github.com/DEFRA/ffc-ahwr-sfd-messaging-proxy",
  "main": "app/index.js",
  "type": "module",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "NODE_ENV=development jest --runInBand --forceExit",
    "test:watch": "NODE_ENV=development jest --coverage=false --onlyChanged --watch --runInBand",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "nodemon --inspect=0.0.0.0 --ext js --legacy-watch app/index.js",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext js --legacy-watch app/index.js",
    "lint-fix": "standard --fix"
  },
  "author": "Defra",
  "contributors": [
    "Ben Hope ben.hope@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/identity": "^4.5.0",
    "@hapi/hapi": "21.3.2",
    "applicationinsights": "2.9.1",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dotenv": "^16.4.5",
    "ffc-messaging": "^2.10.1",
    "hapi-pino": "12.1.0",
    "joi": "17.13.3",
    "log-timestamp": "0.3.0",
    "pg": "^8.13.1",
    "sequelize": "^6.37.5",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-modules-commonjs": "^7.25.9",
    "babel-jest": "^29.7.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "nodemon": "3.0.1",
    "standard": "17.1.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
